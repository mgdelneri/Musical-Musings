<div class="post card">
  <div class="card-header">
    <h2>Create New Post</h2>
  </div>
  <form id="new-post-form" class="card-body">
    <label class="form-label" for="post-title">Title</label>
    <br>
    <input type="text" name="post-title" class="form-input" />
    <br>
    <input type="text" name="image" id="image"/>
    <label class="form-label" for="post-body">Content</label>
    <br>
    <textarea id="content-area" name="post-body" class="form-input"></textarea>
    <br>
    <button id="upload_widget" for="post-image" name="post-image" style="color: #660099; background-color:#ff6600; border-radius: 3em; padding: 0.3em 1.2em; border: none;">Upload Picture</button>

<script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>  

<script type="text/javascript">  
var myWidget = cloudinary.createUploadWidget({
  cloudName: 'dustingottlieb', 
  uploadPreset: 'qrtzb44k'}, (error, result) => { 
    if (!error && result && result.event === "success") { 
      {{!-- console.log('Done! Here is the image info: ', result.info);  --}}
      document.getElementById('image').value = result.info.url;
      console.log(JSON.stringify(result.info));
    }
  }
)

document.getElementById("upload_widget").addEventListener("click", function(event){
    event.preventDefault();
    myWidget.open();
  }, false);
</script> 

    <button type="submit" class="btn">Create</button>
  </form>
</div>

<script src="/js/new.js"></script>